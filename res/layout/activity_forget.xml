<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forget_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/forget_username_ly"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/forget_input_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forget_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="用户昵称: "
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/forget_username_ed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="30dp"
                android:inputType="textShortMessage"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forget_phone_ly"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/forget_input_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forget_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="手机号码: "
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/forget_phone_ed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="bottom"
                android:inputType="phone"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/forget_confirm_bt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/forget_button"
        android:gravity="center"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>