<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <RelativeLayout
        android:id="@+id/login_userinput_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:id="@+id/login_username_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/login_username_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:alpha="0.7"
                android:background="@drawable/login_edittextbg"
                android:inputType="textShortMessage" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_password_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/login_username_ly"
            android:layout_below="@+id/login_username_ly"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/login_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/login_password_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:alpha="0.7"
                android:background="@drawable/login_edittextbg"
                android:inputType="textPassword" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_remember_checkbox_ly"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/login_userinput_ly"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_remember_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/login_remember_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_auto_checkbox_ly"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/login_remember_checkbox_ly"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_auto_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/login_auto_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_register_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_userinput_ly"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" >

        <Button
            android:id="@+id/login_register_bt"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:background="@drawable/login_regbutton" />

        <Button
            android:id="@+id/login_forget_bt"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/login_forbutton" />
    </LinearLayout>

    <Button
        android:id="@+id/login_login_bt"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:text="登陆"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:background="@drawable/login_lgbutton" />

</RelativeLayout>